<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.insigma.ordercenter.mapper.RoleButtonMapper">

    <select id="listButtonByRoles" resultType="com.insigma.ordercenter.entity.SysButtonVO">
        SELECT DISTINCT
            b.button_id,
            b.menu_id,
            b.button_name,
            b.button_url
        FROM
            t_role_button rb
        LEFT JOIN sys_button b ON b.button_id = rb.button_id
        WHERE rb.role_id IN
        <foreach collection="roles" item="roleId" open="(" separator="," close=")">
            #{roleId}
        </foreach>
        <if test="null != menuId">
            AND b.menu_id = #{menuId}
        </if>
        ORDER BY
            b.button_id
    </select>

</mapper>
